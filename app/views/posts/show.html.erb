<div class="flex w-full mx-auto md:w-2/3">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
    <% end %>

    <%= render @post %>

    <%= link_to '編輯', edit_post_path(@post), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= link_to '刪除', @post, data: {turbo_method: "delete", turbo_confirm: "確認刪除？"}, class: "mt-2 rounded-lg py-3 px-5 bg-red-500 text-red-50 font-medium" %>
    </div>
  </div>
</div>
