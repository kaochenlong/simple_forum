<div>
  <h2 class="text-2xl font-medium">
    <%= link_to post.title, post %>
  </h2>

  <article class="my-5">
    <%= simple_format post.content %>
  </article>
</div>

<% if action_name == "show" %>
  <%= turbo_frame_tag "new_comment" do %>
    <%= link_to "新增留言", new_post_comment_path(post), class: 'px-3 py-2 bg-gray-200 rounded' %>
  <% end %>
<% end %>
